{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/pwa",
      "@nuxtjs/sentry",
      "nuxt-i18n",
      "@nuxtjs/dayjs",
      "@nuxtjs/device",
      "@types/jest",
      "cookie-universal-nuxt/types",
      "@nuxtjs/axios"
    ],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "exclude": ["node_modules", ".nuxt", "dist", "**/*.spec.ts", "**/default.vue"]
}
